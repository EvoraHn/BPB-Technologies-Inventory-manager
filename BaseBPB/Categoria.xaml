        xmlns:local="clr-namespace:BaseBPB"
        mc:Ignorable="d"
      Title="Categoria" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" WindowState="Normal">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
