        <TextBox Name="txtEmpresa" Grid.ColumnSpan="5" Grid.Column="1" HorizontalAlignment="Left" Height="30" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="177"/>
        <TextBox Name="txtVendedor" Grid.ColumnSpan="5" Grid.Column="1" HorizontalAlignment="Left" Height="30" Grid.Row="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="177"/>
