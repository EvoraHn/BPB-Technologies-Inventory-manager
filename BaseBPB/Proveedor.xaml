                <ImageBrush ImageSource="IMAGENES/agregar-boton.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Name="BTNEDITAR" Grid.ColumnSpan="4"  Grid.Column="7" HorizontalAlignment="Left"  Grid.Row="12" VerticalAlignment="Top" Width="134" Height="55" Grid.RowSpan="2" Margin="17.32,0.2,0,0" Foreground="{x:Null}" BorderBrush="{x:Null}"  >
            <Button.Background>
                <ImageBrush ImageSource="IMAGENES/editar.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Name="BTNELIMINAR" Grid.ColumnSpan="4"  Grid.Column="13" HorizontalAlignment="Left"  Grid.Row="12" VerticalAlignment="Top" Width="134" Height="55" Grid.RowSpan="2" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="ELIMINARPROVEEDOR">
            <Button.Background>
                <ImageBrush ImageSource="IMAGENES/borrar.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="BTNEDITAR_Copy" Grid.ColumnSpan="3"  Grid.Column="15" HorizontalAlignment="Left"  Grid.Row="6" VerticalAlignment="Top" Width="107" Height="55" Grid.RowSpan="3" Margin="21.982,19,0,0" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="BTNEDITAR_Copy_Click"  >
